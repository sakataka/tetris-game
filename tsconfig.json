{
  "compilerOptions": {
    "target": "ES2024",
    "lib": [
      "ES2024",
      "ES2024.ArrayBuffer",
      "ES2024.Collection",
      "ES2024.Object",
      "ES2024.Promise",
      "ES2024.String",
      "ES2024.RegExp",
      "ES2024.SharedMemory",
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.ImportScripts"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    // Strict type checking settings (enhanced level)
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true, // Re-enabled after cleanup
    "noUnusedParameters": true, // Enhanced: Catch unused parameters
    "exactOptionalPropertyTypes": true, // Enhanced: More precise optional property handling
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // Enhanced: Safer array/object access
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noPropertyAccessFromIndexSignature": true, // Enhanced: Explicit property access
    "noImplicitOverride": true, // Enhanced: Explicit override keyword

    // ES2024 and modern JavaScript features
    "useDefineForClassFields": true, // ES2022+ class field behavior
    "allowImportingTsExtensions": false, // Keep false for bundler compatibility
    "allowArbitraryExtensions": false,
    "verbatimModuleSyntax": false, // Allow optimized imports

    // Performance optimizations
    "assumeChangesOnlyAffectDirectDependencies": true, // Faster incremental builds
    "disableSourceOfProjectReferenceRedirect": false,
    "disableSolutionSearching": false,
    "types": ["@react-router/node", "vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".react-router/types/**/*"],
  "exclude": ["node_modules", "**/*.backup", "**/*.bak", "**/backup/**"]
}

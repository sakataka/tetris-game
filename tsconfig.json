{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // Strict type checking settings (enhanced level)
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true, // Enhanced: Catch unused variables
    "noUnusedParameters": true, // Enhanced: Catch unused parameters
    "exactOptionalPropertyTypes": true, // Enhanced: More precise optional property handling
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // Enhanced: Safer array/object access
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noPropertyAccessFromIndexSignature": true, // Enhanced: Explicit property access
    "noImplicitOverride": true, // Enhanced: Explicit override keyword
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

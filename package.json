{
  "name": "tetris-game",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "react-router dev",
    "build": "vite build",
    "start": "react-router-serve ./build/server/index.js",
    "preview": "vite preview",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lighthouse": "lhci autorun",
    "lighthouse:dev": "lhci autorun --config=lighthouserc.json",
    "lighthouse:manual": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test:compatibility": "playwright test cross-browser.spec.ts mobile-devices.spec.ts",
    "test:performance": "playwright test performance.spec.ts bundle-analysis.spec.ts",
    "compatibility:matrix": "tsx scripts/generate-compatibility-matrix.ts",
    "prepare": "husky",
    "analyze": "vite-bundle-analyzer build/client",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "biome:check": "biome check --apply .",
    "biome:check-dry": "biome check .",
    "quality:check": "pnpm lint && pnpm tsc --noEmit && pnpm test:run",
    "quality:fix": "biome check --apply ."
  },
  "dependencies": {
    "@fontsource/geist-mono": "^5.0.0",
    "@fontsource/geist-sans": "^5.0.0",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@sentry/react": "^9.29.0",
    "@sentry/vite-plugin": "^3.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "immer": "^10.1.1",
    "lucide-react": "^0.515.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.3",
    "react-router": "^7.6.2",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@lhci/cli": "^0.15.0",
    "@playwright/test": "^1.53.0",
    "@react-router/dev": "^7.6.2",
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "babel-plugin-react-compiler": "19.1.0-rc.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.6.1",
    "lint-staged": "^16.1.0",
    "tailwindcss": "^4.1.10",
    "terser": "^5.42.0",
    "typescript": "^5",
    "vite": "^6.0.5",
    "vite-bundle-analyzer": "^0.11.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^3.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["biome check --write"],
    "*.{json,css}": ["biome format --write"]
  }
}
